<Window x:Class="ExpensesTracker.Views.Windows.AddEditDB.AddEditDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpensesTracker.Views.Windows.AddEditDB"
        mc:Ignorable="d"
        Title="AddEditDBWindow" Height="450" Width="800">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Views/Assets/Styles/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBox HorizontalAlignment="Left" Margin="86,36,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="97,22,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="160,38,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="118,22,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    <ComboBox HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="120" Grid.Column="1"/>
    <Button Content="Button" HorizontalAlignment="Left" Margin="150,44,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    <ComboBox Grid.Column="2" HorizontalAlignment="Left" Margin="107,36,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120"/>
    <Button x:Name="AddCategoryButton" Style="{StaticResource OpacityButtonStyle}"  BorderBrush="{x:Null}" Foreground="{x:Null}" IsHitTestVisible="True" Width="16" Height="16" Margin="225,25,10,15" Grid.Column="2" Grid.Row="2">
      <Button.Background>
        <ImageBrush ImageSource="/Views/Assets/Icons/add.png" Stretch="Uniform"/>
      </Button.Background>
    </Button>
    <Button x:Name="AddSubCategoryButton" Style="{StaticResource OpacityButtonStyle}"  BorderBrush="{x:Null}" Foreground="{x:Null}" IsHitTestVisible="True" Width="16" Height="16" Margin="206,20,28,20" Grid.Column="1" Grid.Row="2">
      <Button.Background>
        <ImageBrush ImageSource="/Views/Assets/Icons/add.png" Stretch="Uniform"/>
      </Button.Background>
    </Button>
    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="170,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
    <DatePicker Grid.Column="2" HorizontalAlignment="Center" Margin="0,44,0,0" Grid.Row="3" VerticalAlignment="Top"/>
    <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="190,37,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="206,36,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    <!--#region labels -->
    <Label Content="Name" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top"/>
    <Label Content="Price" HorizontalAlignment="Left" Margin="105,22,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    <Label Grid.Column="1" Content="Quantity" HorizontalAlignment="Left" Margin="73,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    <Label Grid.Column="2" Content="Total" HorizontalAlignment="Left" Margin="47,22,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    <Label Content="Income?" HorizontalAlignment="Left" Margin="139,20,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    <Label Grid.Column="1" Content="Category" HorizontalAlignment="Left" Margin="92,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    <Label Grid.Column="2" Content="Subcategory" HorizontalAlignment="Left" Margin="122,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    <Label Grid.Column="2" Content="Date" HorizontalAlignment="Left" Margin="122,29,0,0" Grid.Row="3" VerticalAlignment="Top"/>
    <Label Content="Recurring" HorizontalAlignment="Left" Margin="177,10,0,0" Grid.Row="3" VerticalAlignment="Top"/>
    <Label Content="Recurring name" HorizontalAlignment="Left" Margin="215,10,0,0" Grid.Row="4" VerticalAlignment="Top"/>
    <Label Content="Description" HorizontalAlignment="Left" Margin="234,17,0,0" Grid.Row="5" VerticalAlignment="Top"/>
    <!--#endregion-->

  </Grid>
</Window>
