<Window x:Class="ExpensesTracker.Views.Windows.AddEditDB.AddEditDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpensesTracker.Views.Windows.AddEditDB"
        mc:Ignorable="d"
        Title="AddEditDBWindow" Height="400" Width="385" MinWidth="400" MinHeight="385" WindowStyle="None" >
  <!-- This removes white bar at the top meant for resizing -->
  <WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="0"/>
  </WindowChrome.WindowChrome>
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Views/Assets/Styles/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="22"/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition Height="2*"/>
    </Grid.RowDefinitions>
    <Label Grid.Column="0" Grid.ColumnSpan="3" />
    <StackPanel x:Name="MinMaxClose" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" >
      <Image MouseDown="Minimize_MouseDown" Source="/Views/Assets/Icons/minimize.png" Width="12" Height="12" VerticalAlignment="Top" Margin="0,5,10,5" />
      <Image MouseDown="Maximize_MouseDown" Source="/Views/Assets/Icons/maximize.png" Width="12" Height="12" VerticalAlignment="Top" Margin="0,5,10,5" />
      <Image MouseDown="Exit_MouseDown" Source="/Views/Assets/Icons/exit.png" Width="12" Height="12" VerticalAlignment="Top" Margin="5,5,10,5" HorizontalAlignment="Right" />
    </StackPanel>

    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="3" Margin="10,0,10,0">
      <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBox TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
    </StackPanel>

    <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="1" Margin="10,0,10,0">
      <Label Content="Price" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBox TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
    </StackPanel>
    <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="1" Margin="10,0,10,0" Grid.Column="1">
      <Label Content="Quantity" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBox TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
    </StackPanel>
    <StackPanel Orientation="Vertical" Grid.Row="2" Margin="10,0,10,0" Grid.Column="2">
      <Label  Content="Total" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBlock TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </StackPanel>

      <StackPanel Grid.Row="3" Orientation="Vertical" Margin="10,0,10,0" Grid.Column="0">
        <Label Content="Income?" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      </StackPanel>

    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="10,0,10,0">
      <Label Content="Category" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
      <StackPanel Orientation="Horizontal">
        <ComboBox VerticalAlignment="Top" Margin="0,0,5,0" />
        <Button x:Name="AddCategoryButton" Style="{StaticResource OpacityButtonStyle}"  BorderBrush="{x:Null}" Foreground="{x:Null}" IsHitTestVisible="True" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Right" >
          <Button.Background>
            <ImageBrush ImageSource="/Views/Assets/Icons/add.png" Stretch="Uniform"/>
          </Button.Background>
        </Button>
      </StackPanel>
    </StackPanel>
    <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical" Margin="10,0,10,0" >
      <Label Content="Subcategory" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <StackPanel Orientation="Horizontal">
        <ComboBox VerticalAlignment="Top" Margin="0,0,5,0"/>
        <Button x:Name="AddSubCategoryButton" Style="{StaticResource OpacityButtonStyle}"  BorderBrush="{x:Null}" Foreground="{x:Null}" IsHitTestVisible="True" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Right">
          <Button.Background>
            <ImageBrush ImageSource="/Views/Assets/Icons/add.png" Stretch="Uniform"/>
          </Button.Background>
        </Button>
      </StackPanel>
    </StackPanel>

    <StackPanel Orientation="Vertical" Grid.Row="4" Grid.ColumnSpan="1" Margin="10,0,10,0">
      <Label Content="Recurring" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <CheckBox Content="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </StackPanel>
    <StackPanel Orientation="Vertical" Grid.Row="4" Grid.ColumnSpan="1" Margin="10,0,10,0" Grid.Column="1">
      <Label Content="Recurring name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <TextBox TextWrapping="Wrap" Text="TextBox"/>
    </StackPanel>
    <StackPanel Orientation="Vertical" Grid.Row="4" Margin="10,0,10,0" Grid.Column="2">
      <Label  Content="Date" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" FirstDayOfWeek="Monday" SelectedDateFormat="Short" IsTodayHighlighted="True"/>
    </StackPanel>

    <StackPanel Orientation="Vertical" Grid.Row="5" Grid.ColumnSpan="3" Margin="10,0,10,10">
      <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25"/>
      <TextBox TextWrapping="Wrap" Text="TextBox" MinLines="5"/>
    </StackPanel>

  </Grid>
</Window>
